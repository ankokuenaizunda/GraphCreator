<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            id : btn_1
            text: 'Linear'
            on_press: root.manager.current = 'aline'
        Button:
            id : btn_2
            text: 'Quadratic'
            on_press: root.manager.current = 'quard'
        Button:
            id : btn_3
            text: 'Inverse'
            on_press: root.manager.current = 'inverse'
        Button:
            id : btn_4
            text: 'Close'
<AlinearScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label :
            text: 'y = ax + b'
        TextInput:
            id : txt_xmin
            text : "Xmin = "
        TextInput:
            id : txt_xmax
            text : "Xmax = "
        TextInput:
            id : txt_num
            text : "Num = "
        TextInput:
            id : txt_a
            text : "a = "
        TextInput:
            id : txt_b
            text : "b = "
        Button:
            id : btn_5
            text: 'execute'
            on_press: root.pressedExecute()
        Button:
            id : btn_6
            text: 'main'
            on_press: root.manager.current = 'main'
